extends  ../_skeleton

//- Includes
include ../elements/_ui-post-boxed
include ../elements/_ui-blog-top-panel

block title
  title Blog Masonry Grid

block page
  // Page Header
  header.page-header
    +rd-navbar-default({
      "style": "rd-navbar-light",
      "logo": '<img width="148" height="30" src="images/logo-dark-148x30.png" alt="">',
      "logoFixed": '<img width="148" height="30" src="images/logo-dark-148x30.png" alt="">',
      "activeLink": 6,
      "attr": {
        "data-layout": "rd-navbar-fixed",
        "data-sm-layout": "rd-navbar-fixed",
        "data-md-layout": "rd-navbar-fullwidth",
        "data-lg-layout": "rd-navbar-static"
      }
    })

    // RD Parallax
    section.section-height-mac.context-dark
      +rd-parallax({
        "on": "false",
        "MdOn": "true",
        "firstLayerType": "media",
        "firstLayerSpeed": "0.25",
        "src": "images/backgrounds/background-22-1920x900.jpg",
        "secondLayerType": "html",
        "secondLayerSpeed": "0",
        "fade": "false"
      })
        .bg-overlay-darker
          .shell.section-34.section-md-100.section-lg-top-170.section-lg-bottom-165
            h1.veil.reveal-md-inline-block Our Blog
            .offset-top-4
              h6.text-italic Latest News in Travel and Tourism

  // Page Content
  main.page-content

    // Our Blog
    section.section-80.bg-wild-wand
      .shell
        .range.range-xs-center
          .cell-md-10.cell-lg-12
            .range.range-xs-justify
              .cell-sm-6.cell-sm-3.text-sm-left
                .reveal-inline-block.inset-md-left-20.inset-lg-left-0
                  .pull-left.inset-right-10
                    p.text-extra-small.text-uppercase.text-gray-base Sort By:
                  .pull-right.shadow-drop-xs.reveal-inline-block.select-xs
                    //Select 2
                    select.form-control.select-filter(data-minimum-results-for-search="Infinity" data-constraints="@Required")
                      option(value="2") Newest
                      option(value="3") Eldest

                  .clearfix
              .cell-sm-6.cell-sm-3.offset-top-20.offset-sm-top-0.text-sm-right
                .reveal-inline-block.inset-md-right-20.inset-lg-right-0
                  .pull-left.inset-right-10
                    p.text-extra-small.text-uppercase.text-gray-base View:
                  .pull-right
                    +blog-top-panel([
                      {
                        "iconStyle": "icon-sm icon-square bg-white mdi mdi-view-stream text-silver",
                        "href": "blog-list.html"
                      },
                      {
                        "iconStyle": "icon-sm icon-square bg-white mdi mdi-format-list-bulleted text-silver",
                        "href": "blog-list-variant-2.html"
                      },
                      {
                        "iconStyle": "icon-sm icon-square bg-primary mdi mdi-view-module text-white",
                        "href": "blog-masonry.html"
                      }
                    ])

            .range.range-xs-center.range-sm-justify.offset-top-50.offset-md-top-25
              .cell-xs-8.cell-sm-6.cell-lg-4
                +post-box({
                  "postStyle": "post-masonry reveal-block text-left",
                  "href": "blog-single-post.html",
                  "img": {
                    "src": "images/blog/post-01-370x240.jpg",
                    "width": "370",
                    "height": "240"
                  },
                  "title": {
                    "style": "text-ubold",
                    "linkStyle": "text-gray-base",
                    "text": "Dubai: The Las Vegas of the Middle East or Something Completely Different ?"
                  },
                  "list": {
                    "style": "list-inline-dashed list-inline-dashed-xs text-extra-small-10 offset-top-15 text-silver-chalice"
                  }
                },
                [
                  {
                    "style": "text-uppercase",
                    "text": "JUNE 20, 2016"
                  },
                  {
                    "href": "testimonials.html",
                    "style": "text-uppercase",
                    "text": "EMMA STONE"
                  }
                ])
                  .offset-top-15
                    p.text-small.text-silver-chalice Dubai. It’s a city that conjures up images of Vegas-like glitz (minus the gambling and drinking). Before visiting last month, my friends painted a picture of a city hot, filled with malls and...

